{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "exclude": ["src/**/__tests__/*"],
  "lib": [],
  "include": [
    "vite.config.*",
    "vitest.config.*",
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ],
  "compilerOptions": {
    "composite": true,
    "allowJs": true,
    "noUnusedLocals": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": [
      "node",
      "vite/client",
      "happy-dom"
    ]
  }
}
